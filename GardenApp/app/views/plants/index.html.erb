<h1>Plants list</h1>


<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @plants.each do |plant| %>
  <tr>
    <td><%= plant.name %></td>
  </tr>
  <tr>
    <td><%= image_tag(plant.name + '/5.png') %></td>
  </tr>
  <tr>
    <td><%= link_to 'Show', plant %></td>
    <td><%= link_to 'Edit', edit_plant_path(plant) %></td>
    <td><%= link_to 'Destroy', plant, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>

</table>

